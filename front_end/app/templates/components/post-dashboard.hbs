<article class="post">
  <table border="1" width="90%">
    <tbody>
    <tr align="center">
      <td border="1">{{post.image}}Image</td>
      <td>
        <table>
          <tr>
            <td colspan="2" border="1">Title: {{post.title}}</td>
          </tr>
          <tr>
            <td colspan="2" border="1">Description: {{post.description}}</td>
          </tr>
          <tr>
            <td border="1">Created on: {{post.dateMade}}</td>
            <td border="1">Pay Rate: {{post.payRate}}</td>
            </tr>
        </table>
      </td>
    </tr>
    </tbody>
  </table>
</article>